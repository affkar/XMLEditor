    	<property name="inputdir4" value="${inputdir4}"/>
    	<property name="inputdir5" value="${inputdir5}"/>
    	<property name="inputdir6" value="${inputdir6}"/>
    	<property name="inputfileregex" value="${inputfileregex}"></property>
    </bean>
    
    <bean id="XMLEventsProcessor1" class="com.jasmine.javax.xmleventreader.XMLEventProcessor">
